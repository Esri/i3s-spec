{
  "title": "textureDefinition",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "A Texture is a set of images, with some parameters specific to the texture/uv mapping to geometries.",
  "properties": {
    "encoding": {
      "type": "string",
      "description": "MIMEtype[1..*] The encoding/content type that is used by all images in this map"
      },
  "wrap": {
    "type": "array",
    "items": {
        "type": "string", 
        "enum": [
            "none",
            "repeat", 
            "mirror"
        ],
        "enum-description" : 
        {
            "none" : "",
            "repeat" : ".",
            "mirror" : ""
        },
     "description": "UV wrapping modes, from {none, repeat, mirror}"
      }
  },
"atlas": {
  "type": "boolean",
  "description": "True if the Map represents a texture atlas."
},
"uvSet": {
  "type": "string",
  "description": "The name of the UV set to be used as texture coordinates."
},
"channels": {
  "type": "array",
  "items": {
      "type": "string", 
    "description": "Indicates which channels are stored in which channel of this map. Possible values: h=brightness, r=red, g=green, b=blue, a=alpha, n=bump, d=displacement."
  }
}
},
"additionalProperties": false,
"esriDocumentation": {
  "examples": [
    {
      "title": "textureDefinition",
      "code": {
        "32": {
          "encoding": [
            "image/jpeg",
            "image/vnd-ms.dds"
          ],
          "wrap": [
            "none",
            "none"
          ],
          "atlas": false,
          "uvSet": "uv0",
          "channels": "rgb",
          "images": [
            {
              "id": "1161930902884843552",
              "size": 512,
              "pixelInWorldUnits": 0,
              "href": [
                "../textures/0_0",
                "../textures/0_0_1"
              ],
              "byteOffset": [
                0,
                0
              ],
              "length": [
                7461,
                174904
              ]
            }
          ]
        }
      }
    }
  ]
}
}



	
	

	