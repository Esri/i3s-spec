{
  "title": "I3S point cloud scene layer: stats",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Contains statistics about each attribute. Statistics are useful to estimate attribute distribution and range.",
  "properties": {
    "min": {
      "type": "number",
      "description": "Minimum attribute value for the entire layer."
    },
    "max": {
      "type": "number",
      "description": "Maximum attribute value for the entire layer."
    },
    "count": {
      "type": "number",
      "description": "Count for the entire layer."
    },
    "sum": {
      "type": "number",
      "description": "Sum of the attribute values over the entire layer."
    },
    "avg": {
      "type": "number",
      "description": "Representing average or mean value. For example, sum/count."
    },
    "stddev": {
      "type": "number",
      "description": "Representing the standard deviation."
    },
    "variance": {
      "type": "number",
      "description": "Representing variance. For example, stats.stddev *stats.stddev."
    },
    "histogram": {
      "type": "object",
      "$ref": "histogram.pcsl.0106.json",
      "description": "Represents the histogram."
    },
    "mostFrequentValues": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "valuecount.pcsl.0106.json",
        "description": "An array of most frequently used values within the point cloud scene layer."
      },
      "description": "An array of most frequently used values within the point cloud scene layer."
    }
  },
  "required": [
    "min",
    "max",
    "count"
  ],
  "additionalProperties": false,
  "esriDocumentation": {
    "examples": [
      {
        "title": "Elevation statistic (point.z statistics)",
        "code_href": "example/stats_1_only.pcsl.0106.json"
      },
      {
        "title": "Intensity statistics",
        "code_href": "example/stats_2_only.pcsl.0106.json"
      },
      {
        "title": "RGB color statistics ( please note that histogram is not required here)",
        "code_href": "example/stats_4_only.pcsl.0106.json"
      },
      {
        "title": "Class code statistics with labels",
        "code_href": "example/stats_8_only.pcsl.0106.json"
      },
      {
        "title": "Flags statistics (LIDAR point cloud)",
        "code_href": "example/stats_16_only.pcsl.0106.json"
      },
      {
        "title": "Returns statistics (LIDAR point cloud)",
        "code_href": "example/stats_32_only.pcsl.0106.json"
      }
    ]
  }
}