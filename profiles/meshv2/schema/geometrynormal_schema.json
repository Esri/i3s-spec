{
  "title": "Normal attribute",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Normals",
  "properties": {
    "type": {
      "type": "string",
      "enum": [ "Float32", "Int16" ],
      "description": ""
    },
    "component": {
      "type": "integer",
      "description": "Number of coordinates per vertex position. Must be 2 or 3. If 2, then `encoding` **must** be `normal-compression` with `type`=`Int16`"
    },
    "encoding": {
      "type": "string",
      "enum": [ "none", "normal-compression" ],
      "enum-description": {
        "none": "default",
        "normal-compression": "Normal are compressed to 2x16bit using [this technique](https://knarkowicz.wordpress.com/2014/04/16/octahedron-normal-vector-encoding). `type` must be`Int16`, `component` must be 2"
      },
      "description": "Encoding"
    },
    "binding": {
      "type": "string",
      "enum": [ "per-vertex", "per-face" ],
      "enum-description": {
        "per-vertex": "default.",
        "per-face": "`topology` must be `triangle`"
      },
      "description": "binding for the normals"
    }
  },
  "required": [
    "type",
    "component"

  ],
  "esriDocumentation": {
    "examples": [
      {
        "title": "2x 16-bit compressed normals. One normal per face (flat-shading)",
        "code": {
          "type": "UInt16",
          "component": 2,
          "encoding": "normal-compression",
          "binding": "per-face"
        }
      },
      {
        "title": "Float32 x,y,z  **per-vertex** normals ",
        "code": {
          "type": "Float32",
          "component": 3
        }
      }
    ]
  }
}