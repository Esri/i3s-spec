{
  "title": "vertexAttribute",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "The vertexAttributes describe valid properties for a single vertex.",
  "properties": {
    "position": {
      "type": "object",
      "description": "The vertex position.",
      "$ref": "geometryAttribute.cmn.0106.json"
    },
    "normal": {
      "type": "object",
      "description": "The vertex normal.",
      "$ref": "geometryAttribute.cmn.0106.json"
    },
    "uv0": {
      "type": "object",
      "description": "The first set of UV coordinates.",
      "$ref": "geometryAttribute.cmn.0106.json"
    },
    "color": {
      "type": "object",
      "description": "The color attribute.",
      "$ref": "geometryAttribute.cmn.0106.json"
    },
    "region": {
      "type": "object",
      "description": "The region attribute.",
      "$ref": "geometryAttribute.cmn.0106.json"
    }
  },
  "required": [
    "position",
    "normal",
    "uv0",
    "color"
  ],
  "additionalProperties": false,
  "esriDocumentation": {
    "examples": [
      {
        "title": "Vertex attributes for 3dObject",
        "code": {
          "position": {
            "byteOffset": 8,
            "valueType": "Float32",
            "valuesPerElement": 3
          },
          "normal": {
            "byteOffset": 2672,
            "valueType": "Float32",
            "valuesPerElement": 3
          },
          "uv0": {
            "byteOffset": 5336,
            "valueType": "Float32",
            "valuesPerElement": 2
          },
          "color": {
            "byteOffset": 7112,
            "valueType": "UInt8",
            "valuesPerElement": 4
          }
        }
      }
    ]
  }
}