{
  "title": "Texture coordinates",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "",
  "properties": {
    "type": {
      "type": "string",
      "enum": [ "Float32", "UInt16" ],
      "description": "For `Uint16` `encoding=normalized` is implied"
    },
    "component": {
      "type": "integer",
      "description": "Number of texture coordinates. Must be 2."
    },
    "encoding": {
      "type": "string",
      "enum": [ "none", "normalized" ],
      "enum-description": {
        "none": "default",
        "normalized": "`type` must be `UInt16`. [0,65k] will be mapped to [0,1]. Cannot be used with repeated-textures since UV could be in[0,n]"
      },
      "description": "Encoding. "
    },
    "binding": {
      "type": "string",
      "enum": [ "per-vertex" ],
      "enum-description": {
        "per-vertex": "default. only mode supported"
      },
      "description": ""
    }
  },
  "required": [
    "type",
    "component"
  ],
  "esriDocumentation": {
    "examples": [
      {
        "title": "16-bit per coordinate UV. ",
        "code": {
          "type": "UInt16",
          "component": 2,
          "encoding": "normalized"
        }
      },
      {
        "title": "Float 32 UV",
        "code": {
          "type": "Float32",
          "component": 2
        }
      }
    ]
  }
}