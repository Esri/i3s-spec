{
  "title": "node [common profiles]",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "The node object.",
  "related": "3DSceneLayer.cmn.0107.cmn.0107",
  "properties": {
    "index": {
      "type": "integer",
      "description": "The index in the node array. May be **different than** material, geometry and attribute `resource` id. See [`mesh`](mesh.cmn.md) for more information."
    },
    "lodThreshold": {
      "type": "number",
      "description": "When to swith LOD. See [`nodepages[i].lodSelectionMetricType`](nodePageDefinition.cmn.md) for more information."
    },
    "obb": {
      "type": "string",
      "$ref": "obb.cmn.0106.json",
      "description": "Oriented bounding box for this node. "
    },
    "children": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "description": "index of the children nodes indices."
    },
    "mesh": {
      "type": "object",
      "$ref": "mesh.cmn.0107.json",
      "description": " The mesh for this node. **WARNING:** only **SINGLE** mesh is supported at version 1.7 (i.e. `length` **must** be 0 or 1)."
    }
  },
  "required": [
    "index",
    "obb"
  ],
  "esriDocumentation": {
    "examples": [
      {
