{
  "title": "SingleComponentParams",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Objects of this type extend VestedGeometryParams and use one texture and one material. They can be used with aggregated LoD geometries. Component objects provide information on parts of the geometry they belong to, specifically with which material and texture to render them.",
  "properties": {
    "material": {
      "type": "string",
      "description": "URL - I3S Pointer reference to the material definition in this node's shared resource, from its root element. If present, used for the entire geometry."
    },
    "texture": {
      "type": "string",
      "description": "URL - I3S Pointer reference to the material definition in this node's shared resource, from its root element. If present, used for the entire geometry."
    },
    "id": {
      "type": "number",
      "description": "The ID of the component, only unique within the Geometry."
    },
    "materialID": {
      "type": "number",
      "description": "UUID of the material, as defined in the shared resources bundle, to use for rendering this component."
    },
    "textureID": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Optional ID of the texture, as defined in shared resources, to use with the material to render this component."
    },
    "regionID": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Optional ID of a texture atlas region which to use with the texture to render this component."
    }
  },
  "required": [
    "id"
  ],
  "esriDocumentation": {
    "examples": [
