{
  "title": "Mesh object",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Mesh geometry for a node",
  "properties": {
    "material": {
      "type": "object",
      "$ref": "meshmaterial_schema.json",
      "description": "material definition"
    },
    "geometry": {
      "type": "object",
      "$ref": "meshgeometry_schema.json",
      "description": "geometry definition"
    },
    "attribute": {
      "type": "object",
      "$ref": "meshattribute_schema.json",
      "description": "attribute set definition"
    }
  },
  "esriDocumentation": {
    "examples": [
      {
        "title": "Textured mesh with attributes and features",
        "code": {
          "material": {
            "definition": 0,
            "resource": 6
          },
          "geometry": {
            "definition": 0,
            "resource": 6,
            "vertexCount": 1092,
            "featureCount": 7
          },
          "attribute": {
            "definition": 0,
            "resource": 6
          }
        }
      }
    ]
  }
}