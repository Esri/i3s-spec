{
  "title": "Unit quaternion (for rotation)",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "4-component quaternion rotation. See [quaternion in relation to rotation](http://run.usc.edu/cs520-s12/quaternions/quaternions-cs520.pdf) for details",
  "properties": {
    "type": {
      "type": "string",
      "enum": [ "Float32" ],
      "description": "Support only float32 quaternion"
    },
    "component": {
      "type": "integer",
      "description": "must be `4`"
    }
  },
  "required": [
    "type",
    "component"
  ],
  "additionalProperties": false,
  "esriDocumentation": {
    "examples": [
      {
        "title": "Quaternion rotation",
        "code": {
          "rotation": {
            "type": "Float32",
            "component": 4
          }
        }
      }
    ]
  }
}