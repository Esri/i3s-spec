{
  "title": "Position vertex attribute",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Relative the center of oriented-bounded box of the node",
  "properties": {
    "type": {
      "type": "string",
      "enum": [ "Float32"],
      "description": "Vertex positions relative to Oriented-bounding-box center"
    },
    "component": {
      "type": "integer",
      "description": "Number of coordinates per vertex position. Must be 3"
    },
    "encoding": {
      "type": "string",
      "enum": [ "none" ],
      "description": "Encoding. "
    },
    "binding": {
      "type": "string",
      "enum": [ "per-vertex" ]
    }
  },
  "required": [
    "type",
    "component"

  ],
  "additionalProperties": false,
  "esriDocumentation": {
    "examples": [
      {
        "title": "{x,y,z} position as float32",
        "code": {
          "position": {
            "type": "Float32",
            "component": 3
          }
        }
      }
    ]
  }
}