{
  "title": "Point Cloud Scene Layer Definition",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "related": [ "statistics.pcsl.0200.json", "nodepage.pcsl.0200.json" ],
  "description": "Describes the point cloud scene layer.",
  "properties": {
    "id": {
      "type": "integer",
      "description": "A unique identifying number for the layer. For point cloud scene layer, only a single layer is supported, therefore, id is always 0."
    },
    "layerType": {
      "type": "string",
      "description": "String indicating the layer type",
      "enum": [
        "PointCloud"
      ]
    },
    "name": {
      "type": "string",
      "description": "Represents the layer name."
    },
    "alias": {
      "type": "string",
      "description": "Represents the alias layer name."
    },
    "desc": {
      "type": "string",
      "description": "Description for the layer."
    },
    "copyrightText": {
      "type": "string",
      "description": "Copyright information to be displayed with this layer."
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "View",
          "Query"
        ],
        "enum-description": {
          "View": "View is supported.",
          "Query": "Query is supported."
        },
        "description": "Describes the capabilities of the point cloud scene layer."
      },
      "description": "Capabilities supported by this layer."
    },
    "spatialReference": {
      "type": "object",
      "description": "An object containing the WKID or WKT identifying the spatial reference of the layer's geometry.",
      "$ref": "spatialReference.cmn.0106.json"
    },
    "heightModelInfo": {
      "type": "object",
      "description": "An object containing the vertical coordinate system information.",
      "$ref": "heightModelInfo.cmn.0106.json"
    },
    "serviceUpdateTimeStamp": {
      "type": "object",
      "description": "Object to provide time stamp when the I3S service or the source of the service was created or updated.",
      "$ref": "serviceUpdateTimeStamp.cmn.0106.json"
    },
    "store": {
      "type": "object",
      "description": "The storage for the layer.",
      "$ref": "store.pcsl.0200.json"
    },
    "attributeStorageInfo": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "Describes the attribute storage for this layer.",


        "$ref": "attributeInfo.pcsl.0200.json"
      },
      "description": "List of attributes included for this layer."
    },
    "drawingInfo": {
      "type": "object",
      "description": "An object containing drawing information.",
      "$ref": "drawingInfo.pcsl.0200.json"
    },
    "elevationInfo": {
      "type": "object",
      "description": "An object containing elevation information.",
      "$ref": "elevationInfo.pcsl.0200.json"
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "field.cmn.0106.json"
      }
    }
  },
  "required": [
    "id",
    "name",
    "layerType",
    "spatialReference",
    "store",
    "attributeStorageInfo"
  ],
  "additionalProperties": false,
  "esriDocumentation": {
    "examples": [
      {
        "title": "Point cloud layer",
        "code_href": "example/mile_high_3dSceneLayer.pcsl.0200.json"
      }
    ]
  }
}