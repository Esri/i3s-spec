{
  "title": "Texture sampler",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Texture sampler",
  "properties": {
    "magFilter": {
      "type": "string",
      "enum": [ "nearest", "linear", "nearest-mipmap-nearest", "linear-mipmap-nearest", "nearest-mipmap-linear", "linear-mipmap-linear" ],
      "description": "Magnification filter for the texture. If omitted, viewer is free to choose"
    },
    "minFilter": {
      "type": "string",
      "enum": [ "nearest", "linear" ],
      "description": "Minification filter for the texture. If omitted, viewer is free to choose"
    },
    "wrapU": {
      "type": "string",
      "enum": [ "clamp", "repeat" ],
      "description": "Texture coordinate wrapping (horizontal). Default =`repeat`"
    },
    "wrapV": {
      "type": "string",
      "enum": [ "clamp", "repeat" ],
      "description": "Texture coordinate wrapping (vertical). Default =`repeat`"
    }
  },
  "esriDocumentation": {
    "examples": [
      {
        "title": "Non-repeated tri-linear texture filtering",
        "code": {
          "magFilter": "linear-mipmap-linear",
          "minFiler": "nearest",
          "wrapU": "clamp",
          "wrapV": "clamp"
        }
      }
    ]
  }
}
