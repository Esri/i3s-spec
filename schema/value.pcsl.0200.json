{
    "title": "I3S point cloud scene layer: Values",
    "type": "object",
    "$schema": "http://json-schema.org/draft-04/schema",
    "description": "A scalar or vector value.",
    "properties": {
        "valueType": {
            "type": "string",
          "enum": [
            "Int8",
            "UInt8",
            "Int16",
            "UInt16",
            "Int32",
            "UInt32",
            "Float32",
            "Float64"
          ],
            "description": "Type of the attribute values after decompression, if applicable. Please note that `string` is not supported for point cloud scene layer attributes."
        },
        "valuesPerElement": {
            "type": "number",
            "minimum": 1,
            "maximum": 3,
            "description": "Number of components."
        }
    },
    "required": [
        "valueType",
        "valuesPerElement"
    ],
    "additionalProperties": false,
    "esriDocumentation": {
        "examples": [
            {
                "title": "Scalar value definition",
                "description": "An unsigned 16 bit value.",
                "code": {
                    "valueType": "UInt16",
                    "valuesPerElement": 1
                }
            },
            {
                "title": "Vector value definition",
                "description": "The vector value can only be RGB-8 value.",
                "code": {
                    "valueType": "UInt8",
                    "valuesPerElement": 3
                }
            }
        ]
    }
}