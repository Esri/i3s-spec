{
  "title": "Node object",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "",
  "related": "3DSceneLayer.cmn.0107.cmn.0107",
  "properties": {
    "index": {
      "type": "integer",
      "description": "index in the node array. may be **different than** [`mesh.resourceId`](mesh.cmn.md)"
    },
    "lodThreshold": {
      "type": "number",
      "description": "When to swith LOD. See [`nodepages[i].lodSelectionMetricType`](nodepages.cmn.md) "
    },
    "obb": {
      "type": "string",
      "$ref": "obb.cmn.0106.json",
      "description": "Oriented bounding box for this node. "
    },
    "children": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "description": "index of the children nodes indices"
    },
    "mesh": {
      "type": "object",
      "$ref": "mesh.cmn.0107.json",
      "description": "WARNING: only **SINGLE** mesh is supported at version 1.7. (i.e. `length` **must** be 0 or 1)"
    }
  },
  "required": [
    "index",
    "obb"
  ],
  "esriDocumentation": {
    "examples": [
      {
        "title": "Leaf node",
        "code": {
          "index": 12,
          "lodThreshold": 50.43,
          "obb": {
            "center": [ 20.82, 41.988, 76.56 ],
            "halfSize": [ 64.93, 11.4, 70.3150 ],
            "quaternion": [ -0.00, 0.030, -0.20569, 10.9 ]
          },
          "mesh": {
            "material": {
              "definition": 0,
              "resource": 6
            },
            "geometry": {
              "definition": 0,
              "resource": 6,
              "vertexCount": 1092,
              "featureCount": 7
            },
            "attribute": {
              "resource": 6
            }
          }
        }
      },
      {
        "title": "Node with un-textured mesh and two children nodes",
        "code": {
          "index": 1024,
          "lodThreshold": 50.43,
          "obb": {
            "center": [ 20.82, 41.988, 76.56 ],
            "halfSize": [ 64.93, 11.4, 70.3150 ],
            "quaternion": [ -0.00, 0.030, -0.20569, 10.9 ]
          },
          "children": [ 1025, 1026 ],
          "mesh": {
            "material": {
              "definition": 0,
              "resource": 6
            },
            "geometry": {
              "definition": 0,
              "resource": 6,
              "vertexCount": 1092,
              "featureCount": 7
            },
            "attribute": {
              "resource": 6
            }
          }
        }
      }
    ]
  }
}