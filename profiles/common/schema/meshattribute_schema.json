{
  "title": "Mesh object",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Mesh geometry for a node",
  "properties": {

    "definition": {
      "type": "integer",
      "description": "index in [layer.attributeSetDefinitions](layer.md) array"
    },
    "resource": {
      "type": "integer",
      "description": "resource locator to be used attribute resources for this mesh. i.e. `layers/0/nodes/attributes/{this.resource}/...`"
    }
  },
  "required": [
    "resource",
    "definition"
  ],
  "esriDocumentation": {
    "examples": [
      {
        "title": "Attribute buffer(s) will be at `/layers/0/nodes/attributes/6/(...)",
        "code": {
          "definition": 0,
          "resource": 6
        }
      }
    ]
  }
}