{
  "title": "FeatureID attribute",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "FeatureID helps to indentify part of mesh from belonging to a particular GIS `feature`. This ID may be used to query additional information from a `FeatureService`",
  "properties": {
    "type": {
      "type": "string",
      "enum": [ "UInt16", "UInt32", "UInt64" ],
      "description": "A feature integer ID"
    },
    "component": {
      "type": "integer",
      "description": "must be 1"
    },
    "encoding": {
      "type": "string",
      "enum": [ "none" ],
      "enum-description": {
        "none": "default and only value supported"
      },
      "description": "No encoding"
    },
    "binding": {
      "type": "string",
      "enum": [ "per-vertex", "per-face" ],
      "enum-description": {
        "per-vertex": "default.",
        "per-face": "Feature ID is per triangle. (`topology` must be `triangle`)"
      },
      "description": "binding for each featureID"
    }
  },
  "required": [
    "type",
    "component"
  ],
  "esriDocumentation": {
    "examples": [
      {
        "title": "Feature_id less than 65k, per-vertex",
        "code": {
          "featureId": {
            "type": "UInt16",
            "component": 1
          }
        }
      },
      {
        "title": "Feature_id per-face",
        "code": {
          "featureId": {
            "type": "UInt32",
            "component": 1,
            "binding": "per-face"
          }
        }
      }
    ]
  }
}