{
  "title": "Building Scene Layer",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description-href": "../docs/layer_desc.md",
  "related": [ "bim::statsummary"],
  "properties": {
    "id": {
      "type": "integer",
      "description": "Identifier for the layer. **Important**: clients should **not** assume it will be `0`"
    },
    "name": {
      "type": "string",
      "description": "Layer name."
    },
    "alias": {
      "type": "string",
      "description": "Alias of the layer name. Can be empty if alias and name are identical."
    },
    "layerType": {
      "type": "string",
      "enum": [ "building" ]
    },
    "description": {
      "type": "string",
      "description": "Description for the layer."
    },
    "copyrightText": {
      "type": "string",
      "description": "Copyright information to be displayed with this layer."
    },
    "fullExtent": {
      "type": "object",
      "$ref": "../../common/schema/fullExtent_schema.json",
      "description": "Layer spatial reference and 3d extent."
    },
    "heightModelInfo": {
      "type": "object",
      "description": "An object containing the vertical coordinate system information.",
      "$ref": "../../common/schema/heightModelInfo_schema.json"
    },
   
    "sublayers": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "sublayer_schema.json"
      },
      "description": "list of sublayers or group of sublayers."
    },
    "filters": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "filter_schema.json"
      },
      "description": "_TBD: BIM layer specific filters_"
    },
    "statisticsHRef": {
      "type": "string",
       "description": "url to statistic summary for the BIM layer. [statistics/summary.json](statsummary.md)"
    }
  },
  "required": [
    "id",
    "name",
    "layerType",
    "fullExtent",
    "sublayers",
    ""
  ],
  "esriDocumentation": {
    "examples": [
      {
        "title": "Building Scene Layer",
        "code_href": "../examples/bim_example1.json"
      }
    ]
  }
}