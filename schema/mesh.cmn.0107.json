{
  "title": "mesh",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Mesh object. Mesh geometry for a node. Clients have to use the `resource` identifiers written in each node to access the resources. While content creator may choose to match `resource` with the node id this is not required by the I3S specification and clients should not make this assumption.",
  "properties": {
    "material": {
      "type": "object",
      "$ref": "meshMaterial.cmn.0107.json",
      "description": "The material definition."
    },
    "geometry": {
      "type": "object",
      "$ref": "meshGeometry.cmn.0107.json",
      "description": "The geometry definition."
    },
    "attribute": {
      "type": "object",
      "$ref": "meshAttribute.cmn.0107.json",
      "description": "The attribute set definition."
    }
  },
  "esriDocumentation": {
    "examples": [
      {
        "title": "Textured mesh with attributes and features.",
        "code": {
          "material": {
            "definition": 0,
            "resource": 6
          },
          "geometry": {
            "definition": 0,
            "resource": 6,
            "vertexCount": 1092,
            "featureCount": 7
          },
          "attribute": {
            "resource": 6
          }
        }
      }
    ]
  }
}