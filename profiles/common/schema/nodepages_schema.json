{
  "title": "Node pages definition",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",

  "description-href": "../docs/nodepages_desc.md",
  "related": "common::node",
  "properties": {
    "nodesPerPage": {
      "type": "integer",
      "description": "Number of nodes per page for this layer"
    },
    "rootIndex": {
      "type": "integer",
      "description": "Index of the root node"
    },
    "lodSelectionMetricType": {
      "type": "string",
      "enum": [ "maxScreenThresholdSQ" ],
      "enum-description": {
        "maxScreenThresholdSQ": "_TBD_: Unless we have a strong case for supporting anything else, we should settle on a **single** type of lod metric"
      },
      "description": "Defines the meaning of `nodes[].lodThreshold` for this layer."
    }
  },
  "required": [
    "nodesPerPage",
    "lodSelectionMetricType",
    "rootIndex"
     
  ],
  "esriDocumentation": {
    "examples": [
      {
        "title": "64 nodes per page index",
        "code": {
          "nodePerPage": 64,
          "rootIndex": 0,
          "lodSelectionMetricType": "maxScreenThresholdSQ"
        }
      }
    ]
  }
}