{
  "title": "materialDefinition",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Materials describe how a feature or a set of features is to be rendered, including shading and color.",
  "patternProperties": {
    "([A-Za-z0-9]+_*)+": {
      "type": "object",
      "description": "Each material definition should be unique for the whole service.",
      "$ref": "materialDefinitionInfo.cmn.0106.json",
      "minProperties": 1,
      "maxProperties": 1
    }
  },
  "additionalProperties": false,
  "esriDocumentation": {
    "examples": [
      {
        "title": "material definition",
        "code": {
          "Mat43": {
            "type": "standard",
            "name": "standard",
            "params": {
              "vertexRegions": false,
              "vertexColors": true,
              "reflectivity": 0,
              "useVertexColorAlpha": false,
              "ambient": [
                0,
                0,
                0
              ],
              "diffuse": [
                1,
                1,
                1
              ],
              "specular": [
                0.098039215686274508,
                0.098039215686274508,
                0.098039215686274508
              ],
              "shininess": 1,
              "renderMode": "solid",
              "cullFace": "none"
            }
          }
        }
      }
    ]
  }
}