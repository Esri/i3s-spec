{
    "title": "I3S point cloud scene layer: store",
    "type": "object",
    "$schema": "http://json-schema.org/draft-04/schema",
    "description": "Describes storage for the layer.",
    "properties": {
        "id": {
            "type": "string",
            "description": "Id for the store. Not currently used by the point cloud scene layer."
        },
        "profile": {
            "type": "string",
            "enum": [
                "PointCloud"
            ],
            "description": "Defines the profile type of the scene layer as point cloud scene layer."
        },
        "version": {
            "type": "string",
            "description": "Point cloud scene layer specification version."
        },
        "extent": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 4,
            "maxItems": 4,
            "description": "2D extent of the layer in the layer spatial reference units."
        },
        "index": {
            "$ref": "index_schema.json"
        },
        "attributeEncoding": {
            "type": "string",
            "description": "DEPRECATED"
        },
        "geometryEncoding": {
            "type": "string",
            "description": "DEPRECATED"
        },
        "defaultGeometrySchema": {
            "$ref": "defaultGeometrySchema_schema.json"
        }
    },
    "required": [
        "profile",
        "version",
        "extent",
        "index",
        "defaultGeometrySchema"
    ]
}