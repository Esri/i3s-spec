{
  "title": "vertex index buffer",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Index are useful to reduce the number of vertices to be transmitted",
  "properties": {
    "type": {
      "type": "string",
      "enum": [ "UInt32", "UInt16" ],
      "description": "Vertex positions relative to Oriented-bounding-box center"
    },
    "component": {
      "type": "integer",
      "description": "Default =1, must be 1"
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": false,
  "esriDocumentation": {
    "examples": [
      {
        "title": "index buffer",
        "code": {
          "indice": {
            "type": "UInt32"
          }
        }
      }
    ]
  }
}