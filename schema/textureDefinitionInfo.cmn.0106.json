{
  "title": "textureDefinitionInfo",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "A texture is a set of images, with some parameters specific to the texture/uv mapping to geometries.\n\nPart of [sharedResource](sharedResource.cmn.md) that is deprecated with 1.7.",
  "properties": {
    "encoding": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "MIMEtype - The encoding/content type that is used by all images in this map"
    },
    "wrap": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "UV wrapping modes, from {none, repeat, mirror}."
    },
    "atlas": {
      "type": "boolean",
      "description": "TRUE if the Map represents a texture atlas."
    },
    "uvSet": {
      "type": "string",
      "description": "The name of the UV set to be used as texture coordinates."
    },
    "channels": {
      "type": "string",
      "enum": [
        "rgb",
        "rgba"
      ],
      "enum-description": {
        "rgb": "",
        "rgba": ""
      },
        "description": "Indicates channels description."
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "image.cmn.0106.json"
      },
      "description": "An image is a binary resource, containing a single raster that can be used to texture a feature or symbol."
    }
  },
  "required": [
    "encoding"
  ],
  "additionalProperties": false,
  "esriDocumentation": {
    "examples": [
      {
        "title": "textureDefinition",
        "code": {
          "encoding": [
            "image/jpeg",
            "image/vnd-ms.dds"
          ],
          "wrap": [
            "none",
            "none"
          ],
          "atlas": false,
          "uvSet": "uv0",
          "channels": "rgb",
          "images": [
            {
              "id": "1161930902884843552",
              "size": 512,
              "pixelInWorldUnits": 0,
              "href": [
                "../textures/0_0",
                "../textures/0_0_1"
              ],
              "byteOffset": [
                0,
                0
              ],
              "length": [
                7461,
                174904
              ]
            }
          ]
        }
      }
    ]
  }
}